{
  "name": "typescript-nodejs-project-starter",
  "version": "1.0.0",
  "description": "Node.js with Typescript boilerplate, using Jest, ESLint, Prettier and Webpack",
  "main": "app.js",
  "types": "dist/app.d.ts",
  "author": "Mattias E. O. Andersson",
  "license": "MIT",
  "homepage": "https://github.com/Adelost/nodejs-typescript-boilerplate#readme",
  "scripts": {
    "clean": "rimraf dist dist-minified coverage tmp",
    "start": "node dist/app.js",
    "start-minified": "node dist-minified/app.js",
    "build": "tsc",
    "watch": "tsc -w",
    "minify": "webpack --display-modules",
    "test": "jest",
    "coverage": "jest --coverage",
    "format": "prettier ./src --write",
    "lint": "eslint --ext ts ./src",
    "lint-fix": "npm run format && npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adelost/nodejs-typescript-boilerplate.git"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.0.5",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "eslint": "7.1.0",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "typescript": "3.9.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {
    "nanoid": "3.1.9",
    "tslib": "2.0.0"
  }
}
